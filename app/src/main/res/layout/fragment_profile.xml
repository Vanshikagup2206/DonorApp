<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:orientation="vertical"
    android:padding="@dimen/sp_16"
    tools:context=".profile.ProfileFragment">

    <TextView
        android:id="@+id/tvDonationHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/donation_history"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/llDetails"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/llDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/neumorphic_card"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@+id/llButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDonationHistory">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/neumorphic_circle"
                android:src="@drawable/baseline_person_24" />

            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="215dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:src="@drawable/qr" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvProfileBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_10"
                        android:text="@string/blood_group"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/dp_45"
                        android:hint="e.g. A+"
                        android:padding="@dimen/dp_10"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_10"
                        android:text="@string/donation_streak"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etDonationStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_30"
                        android:hint="10"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp_10"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_10"
                        android:text="@string/weight"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_70"
                        android:textColor="@color/black"
                        android:hint="At least 50 kg (110 lbs)"
                        android:padding="@dimen/dp_10"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_10"
                        android:text="@string/age"
                        android:gravity="center"

                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_60"
                        android:textColor="@color/black"
                        android:hint="Age: 18–65 years (some places allow 16–17 with parental consent)"
                        android:padding="@dimen/dp_10"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_10"
                        android:text="@string/haemoglobin"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etHemoglobin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/dp_20"
                        android:hint="Minimum 12.5 g/dL (grams per deciliter) for women
Minimum 13.0 g/dL for men"
                        android:padding="@dimen/dp_10"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_10"
                        android:text="@string/bloodPressure"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etBloodPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/dp_20"
                        android:hint="Systolic (Upper): 90–140 mmHg
Diastolic (Lower): 60–90 mmHg"
                        android:padding="@dimen/dp_10"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_10"
                        android:text="@string/pulserate"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etPulserate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/dp_20"
                        android:hint="Regular pulse: 50–100 beats per minute"
                        android:padding="@dimen/dp_10"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/neumorphic_button"
            android:padding="@dimen/dp_10"
            android:text="@string/Delete_acc"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/neumorphic_red_button"
            android:padding="@dimen/dp_10"
            android:text="@string/logout"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnAddHealthDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/neumorphic_red_button"
            android:padding="@dimen/dp_10"
            android:text="@string/Add_details"
            android:textColor="@color/white" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>