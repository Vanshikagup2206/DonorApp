<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:orientation="vertical"
    android:padding="@dimen/sp_16"
    tools:context=".profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/neumorphic_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="@drawable/neumorphic_circle"
                    android:src="@drawable/baseline_person_24" />

                <ImageView
                    android:id="@+id/ivQrCode"
                    android:layout_width="215dp"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:src="@drawable/qr" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProfileBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/blood_group"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvProfileStreaks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/donation_streak"
                android:textColor="@color/green"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <!-- QR Code for Donor Verification -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center">

        </LinearLayout>

        <!-- Donation History -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="5dp"
            android:text="@string/donation_history"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/rvDonations"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="@dimen/dp_8" />-->

        <!-- Edit Profile & Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/neumorphic_button"
                android:padding="@dimen/dp_10"
                android:text="@string/Delete_acc"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"

                android:background="@drawable/neumorphic_red_button"
                android:padding="@dimen/dp_10"
                android:text="@string/logout"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnMydonation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/neumorphic_red_button"
                android:padding="@dimen/dp_10"
                android:text="@string/mydonation"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>