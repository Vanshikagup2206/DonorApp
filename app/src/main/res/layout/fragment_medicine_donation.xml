<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".donate.Medicine_donation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:backgroundTint="#EB6060">


        <!-- Quote text in the CardView -->
        <TextView
            android:id="@+id/card_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="“A donation of medicine can be a lifeline for those in need. Your generosity counts.”"
            android:textAlignment="center"
            android:padding="@dimen/dp_10"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/donor_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_10"
        android:text="Could your contribution of medicine help provide relief to someone in need?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Ask for the donor's details -->
    <TextView
        android:id="@+id/ask_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_10"
        android:text="Please enter your name:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/ask_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_10"
        android:text="Please enter your contact number:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:hint="Your Contact Number"
        android:inputType="phone"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_10"
        android:text="Gender"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:hint="Your Gender"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_10"
        android:text="Age"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:hint="Your Age"
        android:inputType="phone"
        android:padding="10dp" />

    <TextView
        android:id="@+id/ask_medicine_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_10"
        android:text="What type of medicine would you like to donate?"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_medicine_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:hint="Medicine Type (e.g., Painkillers, Antibiotics)"
        android:inputType="text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/ask_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_10"
        android:text="Please enter the amount of medicine you'd like to donate:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:hint="Amount (in units or weight)"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:text="Donate Medicine" />

    </LinearLayout>

</ScrollView>