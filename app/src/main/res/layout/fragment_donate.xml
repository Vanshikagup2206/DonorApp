<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    tools:context=".donate.DonateFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CA4141"
        app:cardCornerRadius="@dimen/dp_20">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/make_a_donation"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="2">

        <!-- Blood Donation -->
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/neumorphic_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/blood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_bloodtype_24"
                app:tint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blood"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <!-- Organ Donation -->
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/neumorphic_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/organ"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_local_hospital_24"
                app:tint="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/organs"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <!-- Money Donation -->
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/neumorphic_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/money"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_attach_money_24"
                app:tint="@color/yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <!-- Medicine Donation -->
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/neumorphic_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/medicine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_medical_services_24"
                app:tint="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </GridLayout>


    <!-- Call to Action Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:backgroundTint="#C8C8C8"
        app:cardCornerRadius="@dimen/dp_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/donateionquote"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginTop="@dimen/dp_50"-->
        <!--            android:background="@color/cardview_light_background"-->
        <!--            android:text="@string/donateionquote"-->
        <!--            android:textColor="@color/black"-->
        <!--            android:textStyle="bold" />-->
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@drawable/donation" />


</LinearLayout>